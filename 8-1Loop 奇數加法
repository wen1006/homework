1+3+.....+
========================================================
[C]

#include <stdio.h>
#include<stdlib.h>
int main(){
  long n,i,total=0;
  printf("請輸入一整數：");
  scanf("%ld",&n);
  for (i=1;i<=n*2-1;i+=2){
	  printf("%ld", i);
	  if (i!=n*2-1)  printf("+");
	  total+=i;
  }
  printf("=%ld ", total);
  system("pause");
}
