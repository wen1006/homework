華氏溫度換成攝氏溫度
========================================================
[C]


#include<stdio.h> 
#include<stdlib.h> 
int main() { 
int a; 
printf("輸入華氏溫度"); 
scanf("%d",&a); 
printf("攝氏溫度為%d\n",(a-32)*5/9); 
system("pause"); 
return 0; 
} 


========================================================
[C++]


#include <iostream>
using namespace std;
int main ()
{
 int a ;
 cout <<"輸入華氏溫度：" ;
 cin >> a;
 cout<< (a-32)*5/9.0;
 system("pause"); 
   return 0;
}
========================================================
[JAVA]


package test01;
import java.util.Scanner;
public class t01 {
	public static void main(String[] args) {
  System.out.print("輸入華氏溫度：");
		Scanner input =new Scanner(System.in);
		int a=input.nextInt();		
		System.out.println(Math.round(((a-32)*5/9.0)*100.0)/100.0);
		input.close();
	}
}
